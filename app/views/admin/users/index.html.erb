<div class="container col-12 mt-4">
  <h1 class="text-center bg-light">会員一覧</h1>
  <div class="row my-5">
    <div class="col-md-10 mx-auto">
        <table class='table'>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to admin_user_path(user.id) do %>
                    <%= user.name %>
                    <% end %>
                </td>
                <td><%= useer.email %></td>
                <td>
                  <% if user.is_deleted == false %>
                    <b class="">有効</b>
                  <% else %>
                    <b class="">退会</b>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <%= paginate @users %>
    </div>
  </div>
</div>