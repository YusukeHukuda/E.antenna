<div class="container mt-4 col-12">
  <h3 class="text-center">
    投稿
  </h3>
  <%#= render "public/shared/error_messages", resource: @post %>
  <div class="row justify-content-center">
    <%= form_with class: "col-md-4", model: [@tag,@post], url: posts_path, method: :post do |f| %>

    <div class="justify-content-center">
      <div class="form-group">
        <%= f.label "画像", class: "control-label" %>
        <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label "タイトル", class: "control-label" %>
        <%= f.text_field :title, class: "form-control item_name" %>
      </div>

      <div class="form-group">
        <%= f.label "タグ", class: "control-label" %>
        <%= f.text_field :name, class: "form-control item_name" %>
      </div>

      <div class="form-group">
        <%= f.label "住所", class: "control-label" %>
        <%= f.text_field :address, class: "form-control item_name" %>
      </div>

      <div class="form-group">
        <%= f.label "本文", class: "control-label" %>
        <%= f.text_area :body, rows: 3, class: "form-control item_introduction" %>
      </div>
    </div>

      <!--<label class="col-sm-2 control-label">ジャンル</label>-->
      <!--  <div class="col-sm-10">-->
      <!--    <div>-->
      <!--      <%#= f.collection_select :genre_id, Genre.all, :id, :name, class: "dropdown" %>-->
      <!--    </div>-->
      <!--  </div>-->

      <div class="row mb-3 justify-content-center">
        <%= f.submit "投稿", class: "col-md-2 btn btn-warning btn-lg" %>
      </div>
    </div>
    <% end %>
  </div>
