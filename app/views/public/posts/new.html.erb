<div class="container mt-4 col-12">
  <h1 class="text-center bg-light">
    投稿
  </h1>
  <%#= render "public/shared/error_messages", resource: @post %>
  <div class="row g-3 d-flex justify-content-center">
    <%= form_with class: "col-md-8", model: @post, url: posts_path, method: :post do |f| %>

      <div class="row mb-3">
        <%= f.label "画像", class: "col-md-3 col-form-label" %>
        <%= f.file_field :image, class: "col-md-5 form-control-file image", accept: 'image/*' %>
      </div>

      <div class="row mb-3">
        <%= f.label "タイトル", class: "col-md-3 col-form-label" %>
        <%= f.text_field :title, class: "col-md-5 form-control item_name" %>
      </div>

      <div class="row mb-3">
        <%= f.label "本文", class: "col-md-3 col-form-label" %>
        <%= f.text_area :body, class: "col-md-5 form-control item_introduction" %>
      </div>

      <!--<label class="col-sm-2 control-label">ジャンル</label>-->
      <!--  <div class="col-sm-10">-->
      <!--    <div>-->
      <!--      <%#= f.collection_select :genre_id, Genre.all, :id, :name, class: "dropdown" %>-->
      <!--    </div>-->
      <!--  </div>-->

      <div class="row mb-3 justify-content-center">
        <%= f.submit "投稿", class: "col-md-2 btn btn-success btn-lg" %>
      </div>
    </div>
    <% end %>
  </div>
