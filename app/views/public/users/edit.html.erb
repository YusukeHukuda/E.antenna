<div class="container mt-5">
  <div class="row">
    <div class="col-xl-1"></div>
    <h4 class="col-lg-3 text-center"
        style="background-color: #EEEEEE">
          会員情報編集
    </h4>
  </div>
  <%= form_with model: @user, url: users_path do |f| %>
    <div class="row mt-5">
      <div class="form-group col-lg-2 offset-md-1">
        <%= f.label :name,"氏名" %>
      </div>
      <div class="form-group col-lg-3">
        <%= f.text_field :last_name, autofocus: true, class: "form-control border-dark" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-2 offset-md-1">
        <%= f.label :email,"メールアドレス" %>
      </div>
      <div class="form-group col-lg-3">
        <%= f.text_field :email, class: "form-control border-dark" %>
      </div>
    </div>
    <!--<div class="row">-->
    <!--  <div class="col-lg-3 mt-4 offset-lg-3 text-center"><%#= f.submit "編集内容を保存", style: 'width:150px', class: "btn btn-success" %></div>-->
    <!--  <div class="col-lg-3 mt-4 text-center"><%#= link_to "退会する", customers_unsubscribe_path, style: 'width:150px', class: "btn btn-danger" %></div>-->
    <!--</div>-->
  <% end %>
</div>