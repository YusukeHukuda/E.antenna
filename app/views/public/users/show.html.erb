<% if flash[:notice] %>
  <div class="alert alert-success text-center">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="mt-1 pl-1">マイページ</h4>
        <table class='table text-center'>
          <thead>
            <%= image_tag @user.get_image(150,150), class: "rounded-circle mb-2 d-block mx-auto" %>
          </thead>

          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th style="font-size:12px;"><%= @user.self_introduction %></th>
          </tr>
        </table>
      <div class="row">
        <%= link_to users_information_edit_path(@user), class: "btn btn-outline-secondary btn-block m-4" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <button type="button" class="bg-body-secondary border-0 rounded-pill my-2 mr-2 ">
        <%= link_to users_path do %>
          <h4 class="text-dark mt-1 pl-1">投稿一覧</h4>
        <% end %>
      </button>
      <button type="button" class="bg-white border-0 rounded-pill m-2">
        <%= link_to users_favorites_path do %>
          <h4 class="text-dark mt-1 pl-1">いいね一覧</h4>
        <% end %>
      </button>

        <div class="card-deck mb-3 " style="width: 30rem;"> <!--カードを横向きに-->
          <% @posts.each do |post| %>
            <div class="card bg-dark mb-4"> <!--カード使います-->
              <%= image_tag post.get_image(200,200), class: "rounded" %>
              <%= link_to post_path(post.id) do %>
                <div class="card-header">
                  <p class="card-text text-white" style="font-size:15px;"><%= post.title %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
