<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="mt-1 pl-1">マイページ</h4>
        <table class='table text-center'>
          <thead>
            <%= image_tag @user.get_image(150,150), class: "rounded-circle mb-2 d-block mx-auto" %>
          </thead>

          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th style="font-size:12px;"><%= @user.self_introduction %></th>
          </tr>
        </table>
      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>

      <div class="col-md-8 offset-md-1">
        <h4 class="mt-1 pl-1">投稿一覧</h4>
          <table class='table'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |pos| %>
              <tr>
                <td><%= image_tag current_user.posts.get_image(150,150) %></td>
                <td><%= pos.title %></td>
                <td><%= pos.body %></td>
              </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
